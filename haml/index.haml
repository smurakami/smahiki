  %body
    #message_container
      .connecting.message
        .text 接続中
      .team_select.message
        #message_rope_id 綱ID:
        .text チームを選択！
        .team_buttons
          .red_button.button
            赤
          .white_button.button
            白
        .team_player_number
          .red_team_number.number
            0人
          .white_team_number.number
            0人
        .start_button.button.disabled
          START!
        .train_button.button
          ひとりで特訓
      .count_one.message
        .text 1
      .count_two.message
        .text 2
      .count_three.message
        .text 3
      .count_go.message
        .text go!
    #scroll_container
      #background
        .enemy
        .border
        .friend
      #scroll_body

    / jQuery (necessary for Bootstrap's JavaScript plugins)
    %script{:src => "https://code.jquery.com/jquery.js"}
    / Include all compiled plugins (below), or include individual files as needed
